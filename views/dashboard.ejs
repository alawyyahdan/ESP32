<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard - ESP32-CAM Streaming Provider</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body class="bg-gray-50 min-h-screen">
    <!-- Navigation -->
    <nav class="bg-white shadow-sm border-b">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between h-16">
                <div class="flex items-center">
                    <div class="flex-shrink-0">
                        <h1 class="text-xl font-bold text-gray-900">
                            <i class="fas fa-video text-blue-500 mr-2"></i>
                            ESP32-CAM Provider
                        </h1>
                    </div>
                </div>
                <div class="flex items-center space-x-4">
                    <a href="/dashboard" class="text-blue-600 hover:text-blue-800 text-sm font-medium">
                        <i class="fas fa-tachometer-alt mr-1"></i>
                        Dashboard
                    </a>
                    <a href="/scripts" class="text-gray-600 hover:text-gray-800 text-sm font-medium">
                        <i class="fas fa-code mr-1"></i>
                        Scripts
                    </a>
                    <a href="/analytics" class="text-gray-600 hover:text-gray-800 text-sm font-medium">
                        <i class="fas fa-chart-bar mr-1"></i>
                        Analytics
                    </a>
                    <a href="/docs" class="text-gray-600 hover:text-gray-800 text-sm font-medium">
                        <i class="fas fa-book mr-1"></i>
                        Docs
                    </a>
                    <span class="text-sm text-gray-700">
                        <i class="fas fa-user mr-1"></i>
                        <%= user.email %>
                    </span>
                    <form method="POST" action="/logout" class="inline">
                        <button type="submit" class="text-gray-500 hover:text-gray-700 text-sm">
                            <i class="fas fa-sign-out-alt mr-1"></i>
                            Logout
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="max-w-7xl mx-auto py-8 px-4 sm:px-6 lg:px-8">
        <!-- Alerts -->
        <% if (success) { %>
        <div class="mb-6 p-4 bg-green-100 border border-green-400 text-green-700 rounded-md">
            <div class="flex items-center">
                <i class="fas fa-check-circle mr-2"></i>
                <%= success %>
            </div>
        </div>
        <% } %>

        <% if (error) { %>
        <div class="mb-6 p-4 bg-red-100 border border-red-400 text-red-700 rounded-md">
            <div class="flex items-center">
                <i class="fas fa-exclamation-circle mr-2"></i>
                <%= error %>
            </div>
        </div>
        <% } %>

        <!-- Header -->
        <div class="mb-8">
            <h1 class="text-3xl font-bold text-gray-900">Dashboard</h1>
            <p class="mt-2 text-gray-600">Manage your ESP32-CAM devices and streaming</p>
        </div>

        <!-- Stats Cards -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
            <div class="bg-white rounded-lg shadow p-6">
                <div class="flex items-center">
                    <div class="p-2 bg-blue-100 rounded-lg">
                        <i class="fas fa-camera text-blue-600 text-xl"></i>
                    </div>
                    <div class="ml-4">
                        <p class="text-sm font-medium text-gray-600">Total Devices</p>
                        <p class="text-2xl font-bold text-gray-900"><%= devices.length %></p>
                    </div>
                </div>
            </div>

            <div class="bg-white rounded-lg shadow p-6">
                <div class="flex items-center">
                    <div class="p-2 bg-green-100 rounded-lg">
                        <i class="fas fa-broadcast-tower text-green-600 text-xl"></i>
                    </div>
                    <div class="ml-4">
                        <p class="text-sm font-medium text-gray-600">Active Streams</p>
                        <p class="text-2xl font-bold text-gray-900">
                            <%= devices.filter(d => d.isStreaming).length %>
                        </p>
                    </div>
                </div>
            </div>

            <div class="bg-white rounded-lg shadow p-6">
                <div class="flex items-center">
                    <div class="p-2 bg-yellow-100 rounded-lg">
                        <i class="fas fa-eye text-yellow-600 text-xl"></i>
                    </div>
                    <div class="ml-4">
                        <p class="text-sm font-medium text-gray-600">Total Viewers</p>
                        <p class="text-2xl font-bold text-gray-900">
                            <%= devices.reduce((sum, d) => sum + (d.streamInfo?.viewerCount || 0), 0) %>
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Add Device Button -->
        <div class="mb-6">
            <button
                onclick="showAddDeviceModal()"
                class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-md font-medium transition duration-150 ease-in-out"
            >
                <i class="fas fa-plus mr-2"></i>
                Add New Device
            </button>
        </div>

        <!-- Devices List -->
        <div class="bg-white shadow rounded-lg">
            <div class="px-6 py-4 border-b border-gray-200">
                <h2 class="text-lg font-medium text-gray-900">Your Devices</h2>
            </div>

            <% if (devices.length === 0) { %>
            <div class="p-8 text-center">
                <i class="fas fa-camera text-gray-400 text-4xl mb-4"></i>
                <h3 class="text-lg font-medium text-gray-900 mb-2">No devices yet</h3>
                <p class="text-gray-600 mb-4">Add your first ESP32-CAM device to get started</p>
                <button
                    onclick="showAddDeviceModal()"
                    class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-md font-medium"
                >
                    <i class="fas fa-plus mr-2"></i>
                    Add Device
                </button>
            </div>
            <% } else { %>
            <div class="divide-y divide-gray-200">
                <% devices.forEach(device => { %>
                <div class="p-6">
                    <div class="flex items-center justify-between">
                        <div class="flex items-center space-x-4">
                            <div class="p-2 bg-gray-100 rounded-lg">
                                <i class="fas fa-camera text-gray-600 text-xl"></i>
                            </div>
                            <div>
                                <h3 class="text-lg font-medium text-gray-900"><%= device.name %></h3>
                                <div class="flex items-center space-x-4 mt-1">
                                    <span class="flex items-center text-sm <%= device.isStreaming ? 'text-green-600' : 'text-gray-500' %>">
                                        <i class="fas fa-circle text-xs mr-1"></i>
                                        <%= device.isStreaming ? 'Streaming' : 'Offline' %>
                                    </span>
                                    <span class="text-sm text-gray-500">
                                        Last active: <%= device.lastActive ? new Date(device.lastActive).toLocaleString() : 'Never' %>
                                    </span>
                                    <% if (device.streamInfo && device.streamInfo.viewerCount > 0) { %>
                                    <span class="text-sm text-blue-600">
                                        <i class="fas fa-eye mr-1"></i>
                                        <%= device.streamInfo.viewerCount %> viewers
                                    </span>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                        <div class="flex items-center space-x-2">
                            <a
                                href="/device/<%= device.id %>/view"
                                class="text-blue-600 hover:text-blue-800 px-3 py-1 text-sm font-medium"
                            >
                                <i class="fas fa-eye mr-1"></i>
                                View
                            </a>
                            <button
                                onclick="showDeviceDetails('<%= device.id %>')"
                                class="text-gray-600 hover:text-gray-800 px-3 py-1 text-sm font-medium"
                            >
                                <i class="fas fa-cog mr-1"></i>
                                Settings
                            </button>
                            <button
                                onclick="deleteDevice('<%= device.id %>')"
                                class="text-red-600 hover:text-red-800 px-3 py-1 text-sm font-medium"
                            >
                                <i class="fas fa-trash mr-1"></i>
                                Delete
                            </button>
                        </div>
                    </div>

                    <!-- Device Details (Hidden by default) -->
                    <div id="device-details-<%= device.id %>" class="hidden mt-4 p-4 bg-gray-50 rounded-lg">
                        <div class="grid grid-cols-1 lg:grid-cols-3 md:grid-cols-2 gap-4">
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-2">Device ID</label>
                                <div class="flex">
                                    <input
                                        type="text"
                                        value="<%= device.id %>"
                                        readonly
                                        class="flex-1 px-3 py-2 border border-gray-300 rounded-l-md bg-gray-50 text-sm font-mono"
                                    >
                                    <button
                                        onclick="copyToClipboard('<%= device.id %>', this)"
                                        class="px-3 py-2 bg-gray-200 border border-l-0 border-gray-300 rounded-r-md hover:bg-gray-300 text-sm"
                                    >
                                        <i class="fas fa-copy"></i>
                                    </button>
                                </div>
                                <p class="text-xs text-gray-500 mt-1">Use this ID in ESP32-CAM code</p>
                            </div>

                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-2">Device API Key</label>
                                <div class="flex">
                                    <input
                                        type="text"
                                        value="<%= device.deviceApiKey %>"
                                        readonly
                                        class="flex-1 px-3 py-2 border border-gray-300 rounded-l-md bg-gray-50 text-sm font-mono"
                                    >
                                    <button
                                        onclick="copyToClipboard('<%= device.deviceApiKey %>', this)"
                                        class="px-3 py-2 bg-gray-200 border border-l-0 border-gray-300 rounded-r-md hover:bg-gray-300 text-sm"
                                    >
                                        <i class="fas fa-copy"></i>
                                    </button>
                                </div>
                                <p class="text-xs text-gray-500 mt-1">Use this key for ESP32-CAM to upload streams</p>
                            </div>

                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-2">Viewer API Key</label>
                                <div class="flex">
                                    <input
                                        type="text"
                                        value="<%= device.viewerApiKey %>"
                                        readonly
                                        class="flex-1 px-3 py-2 border border-gray-300 rounded-l-md bg-gray-50 text-sm font-mono"
                                    >
                                    <button
                                        onclick="copyToClipboard('<%= device.viewerApiKey %>', this)"
                                        class="px-3 py-2 bg-gray-200 border border-l-0 border-gray-300 rounded-r-md hover:bg-gray-300 text-sm"
                                    >
                                        <i class="fas fa-copy"></i>
                                    </button>
                                </div>
                                <p class="text-xs text-gray-500 mt-1">Use this key for public viewing</p>
                            </div>
                        </div>

                        <div class="mt-4 pt-4 border-t border-gray-200">
                            <h4 class="text-sm font-medium text-gray-700 mb-2">Stream URLs</h4>
                            <div class="space-y-2">
                                <div>
                                    <label class="block text-xs text-gray-500">Upload URL (for ESP32-CAM)</label>
                                    <code class="block text-xs bg-gray-100 p-2 rounded font-mono break-all">
                                        POST <%= serverAddress %>/api/stream/<%= device.id %>?key=<%= device.deviceApiKey %>
                                    </code>
                                </div>
                                <div>
                                    <label class="block text-xs text-gray-500">Viewer URL (for embedding)</label>
                                    <code class="block text-xs bg-gray-100 p-2 rounded font-mono break-all">
                                        GET <%= serverAddress %>/api/view/<%= device.id %>?key=<%= device.viewerApiKey %>
                                    </code>
                                </div>
                            </div>
                        </div>

                        <div class="mt-4 flex space-x-2">
                            <button
                                onclick="regenerateApiKeys('<%= device.id %>')"
                                class="bg-yellow-600 hover:bg-yellow-700 text-white px-3 py-1 rounded text-sm"
                            >
                                <i class="fas fa-refresh mr-1"></i>
                                Regenerate Keys
                            </button>
                        </div>
                    </div>
                </div>
                <% }) %>
            </div>
            <% } %>
        </div>
    </main>

    <!-- Add Device Modal -->
    <div id="addDeviceModal" class="hidden fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full z-50">
        <div class="relative top-20 mx-auto p-5 border w-96 shadow-lg rounded-md bg-white">
            <div class="mt-3">
                <div class="flex items-center justify-between mb-4">
                    <h3 class="text-lg font-medium text-gray-900">Add New Device</h3>
                    <button onclick="hideAddDeviceModal()" class="text-gray-400 hover:text-gray-600">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
                <form method="POST" action="/dashboard/devices">
                    <div class="mb-4">
                        <label for="deviceName" class="block text-sm font-medium text-gray-700 mb-2">
                            Device Name
                        </label>
                        <input
                            type="text"
                            id="deviceName"
                            name="name"
                            required
                            class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500"
                            placeholder="e.g., Living Room Camera"
                        >
                    </div>
                    <div class="flex justify-end space-x-2">
                        <button
                            type="button"
                            onclick="hideAddDeviceModal()"
                            class="px-4 py-2 text-gray-600 border border-gray-300 rounded-md hover:bg-gray-50"
                        >
                            Cancel
                        </button>
                        <button
                            type="submit"
                            class="px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700"
                        >
                            Add Device
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script>
        // Modal functions
        function showAddDeviceModal() {
            document.getElementById('addDeviceModal').classList.remove('hidden');
            document.getElementById('deviceName').focus();
        }

        function hideAddDeviceModal() {
            document.getElementById('addDeviceModal').classList.add('hidden');
            document.getElementById('deviceName').value = '';
        }

        // Device details toggle
        function showDeviceDetails(deviceId) {
            const details = document.getElementById(`device-details-${deviceId}`);
            details.classList.toggle('hidden');
        }

        // Copy to clipboard
        function copyToClipboard(text, button) {
            navigator.clipboard.writeText(text).then(() => {
                const originalText = button.innerHTML;
                button.innerHTML = '<i class="fas fa-check"></i>';
                button.classList.add('bg-green-500', 'text-white');
                
                setTimeout(() => {
                    button.innerHTML = originalText;
                    button.classList.remove('bg-green-500', 'text-white');
                }, 2000);
            }).catch(() => {
                alert('Failed to copy to clipboard');
            });
        }

        // Delete device
        async function deleteDevice(deviceId) {
            if (!confirm('Are you sure you want to delete this device? This action cannot be undone.')) {
                return;
            }

            try {
                const response = await fetch(`/dashboard/devices/${deviceId}`, {
                    method: 'DELETE',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                });

                if (response.ok) {
                    location.reload();
                } else {
                    const error = await response.json();
                    alert(`Failed to delete device: ${error.error}`);
                }
            } catch (error) {
                alert('Failed to delete device. Please try again.');
            }
        }

        // Regenerate API keys
        async function regenerateApiKeys(deviceId) {
            if (!confirm('Are you sure you want to regenerate API keys? You will need to update your ESP32-CAM configuration.')) {
                return;
            }

            try {
                const response = await fetch(`/dashboard/devices/${deviceId}/regenerate`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                });

                if (response.ok) {
                    location.reload();
                } else {
                    const error = await response.json();
                    alert(`Failed to regenerate keys: ${error.error}`);
                }
            } catch (error) {
                alert('Failed to regenerate keys. Please try again.');
            }
        }

        // Auto-refresh device status every 30 seconds
        setInterval(() => {
            // Only refresh if there are devices
            if (<%= devices.length %> > 0) {
                location.reload();
            }
        }, 30000);

        // Close modal on escape key
        document.addEventListener('keydown', (e) => {
            if (e.key === 'Escape') {
                hideAddDeviceModal();
            }
        });
    </script>
</body>
</html>
